
@{
    ViewBag.Title = "QA";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string firstTabId = "";
}

<style>
    .table > thead > tr th {
        background-color: #008000;
        color: white;
        text-align: center;
    }

    .td-quetion {
        color: red;
        font-weight: bolder;
    }

    .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
        background-color: #99ff66 !important;
        color: black !important;
    }
</style>

<div class="s-menu">
    <div class="container">
        <ul>
            <li><a href="~/Home/Introduce">平台簡介</a></li>
            <li><a href="~/Home/News">最新消息</a></li>
            <li><a href="~/Home/Links">相關網站</a></li>
            <li><a href="~/Home/Search">全站搜尋</a></li>
            <li><a href="~/Home/Sitemaps">網站導覽</a></li>
            <li><a href="~/Home/QA">常見問答</a></li>
            <li><a href="~/Home/DoctorDailyJob">植醫日常</a></li>
        </ul>
    </div>
</div>

<section class="content bg-img">
    <div class="con-box">
        <div class="container">
            <div class="con-head">
                <div class="title d-flex justify-content-between pb-0 align-items-end">
                    <h3>
                        <span class="line">常見問題</span>
                    </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Home/Index">首頁</a></li>
                            <li class="breadcrumb-item active" aria-current="page">常見問題</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="con-body">
                <div class="card">
                    <div class="card-body">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                @{
                                    for (int i = 0; i < Model.Types.Count; i++)
                                    {
                                        <a class="nav-link @(i == 0 ? "active" : "")"
                                           id="nav-@Model.Types[i].Code-tab"
                                           data-toggle="tab"
                                           href="#nav-@Model.Types[i].Code"
                                           role="tab"
                                           aria-controls="nav-@Model.Types[i].Code"
                                           aria-selected="@(i == 0 ? true : false)">
                                            @Model.Types[i].Name
                                        </a>
                                    }
                                }
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            @{
                                int j = 0;
                                foreach (var type in Model.Types)
                                {
                                   
                                    <div class="tab-pane @(j == 0 ? "active" : "fade")"
                                         id="nav-@type.Code"
                                         role="tabpanel"
                                         aria-labelledby="nav-@type.Code-tab">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th style="word-break:keep-all;width:15%">項次</th>
                                                        <th style="word-break:keep-all">問題 / 回覆說明</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int k = 0;
                                                        foreach (var QA in Model.List[type.Code])
                                                        {
                                                            k++;
                                                            <tr>
                                                                <td style="text-align:center">@k</td>
                                                                <td>
                                                                    <span class="td-quetion">
                                                                        問題：
                                                                        <span>@QA.Question</span>
                                                                    </span>
                                                                    <br />
                                                                    <div class="mt-4">
                                                                        回覆：
                                                                        <span>@QA.Answer</span>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    j++;
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="mt-4" style="text-align:center">
                    <button type="button" class="btn btn-primary" onclick="window.history.back()"><i class="fas fa-hand-point-left mr-2"></i>回上一頁</button>
                </div>
            </div>
        </div>
    </div>

</section>