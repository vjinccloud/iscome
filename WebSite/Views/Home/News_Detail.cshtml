
@{
    ViewBag.Title = "News_Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dot-mark::before {
        content: "●";
        color:black;
        font-size:30px;
        margin-right:.5rem;
    }
    .divcss5 img {
        max-width: 100%;
    } 
</style>

<div class="s-menu">
    <div class="container">
        <ul>
            <li><a href="~/Home/Introduce">平台簡介</a></li>
            <li><a href="~/Home/News">最新消息</a></li>
            <li><a href="~/Home/Links">相關網站</a></li>
            <li><a href="~/Home/Search">全站搜尋</a></li>
            <li><a href="~/Home/Sitemaps">網站導覽</a></li>
            <li><a href="~/Home/QA">常見問答</a></li>
            <li><a href="~/Home/DoctorDailyJob">植醫日常</a></li>
        </ul>
    </div>
</div>

<section class="content bg-img">
    <div class="con-box">
        <div class="container">
            <div class="con-head">
                <div class="title d-flex justify-content-between pb-0 align-items-end">
                    <h3>
                        <span class="line">最新消息-@(Model.Title)</span>
                    </h3>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Home/Index">首頁</a></li>
                            <li class="breadcrumb-item active"><a href="~/Home/News">最新消息</a></li>
                            <li class="breadcrumb-item active" aria-current="page">最新消息內頁</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="con-body">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <span class="mr-3">更新日期：@(Model.UpdatedAt == null ? Model.CreatedAtStr : Model.UpdatedAtStr)</span>
                            <span><i class="far fa-eye m-2"></i>點閱率：@Model.Clicks</span>
                        </div>
                        <div class="mt-3 mb-3 divcss5" style="white-space:normal;word-break:break-all">
                            @Html.Raw(Model.Context.Replace("<a href=", "<a target='_blank' href="))
                        </div>

                        <div class="mt-3" style="border-bottom:1px black solid">
                            <span style="font-size:16px">檔案下載</span>
                        </div>

                        @{
                            foreach (var File in Model.Files)
                            {
                                <div>
                                    <span>
                                        <a class="dot-mark" href="@File.FileUrl" target="_blank" target="_blank">
                                            @File.FileNameStr
                                        </a>
                                        <span>
                                            @(File.FileExtension.ToUpper())檔案，@File.Size@*，下載 @File.Times 次*@，MD5: @(File.MD5.ToUpper())
                                        </span>
                                    </span>
                                </div>
                            }
                        }


                    </div>
                </div>
                <div class="mt-4" style="text-align:center">
                    <button type="button" class="btn btn-primary" onclick="window.history.back()"><i class="fas fa-hand-point-left mr-2"></i>回上一頁</button>
                </div>
            </div>
        </div>
    </div>

</section>