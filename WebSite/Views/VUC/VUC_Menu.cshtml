@model Website.Models.VUC.Model_VUC_FunctionMenu
<nav class="menu">
    <ul class="nav metismenu" id="sidebar-menu">
        @foreach (var item in Model.funcList)
        {
            //特殊:
            //如果沒有指定大選單icon 則預設給"/assets/img/i_01.png" 省得麻煩 = ="
            //如果想要自訂 請更新sysMenu資料表
            if (string.IsNullOrWhiteSpace(item.main.iconURL))
            {
                item.main.iconURL = "/assets/img/i_01.png";
            }
            <li class="@(item.ShowInfo?"open":"")">
                <a href="#">
                    <img src="@Url.Content("~"+item.main.iconURL)">
                    @item.main.Name
                    <i class="fa arrow"></i>
                </a>
                <ul>
                    @foreach (var detail in item.list_detail)
                    {
                        <li>
                            <a href="@detail.Path">@detail.Name</a>
                        </li>
                    }
                </ul>
            </li>

        }
    </ul>
</nav>