
@{
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>
        作物病蟲害預警系統暨植物醫師診斷系統管理平台
    </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/css/vnstyle.css" rel="stylesheet" />

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <script src="@Url.Content("~/Scripts/jquery-3.3.1.js")"></script>

</head>
<body class="bg-card">
    <div class="container-fulid">
        <!-- Outer Row -->
        <div class="row vh-100 ">
            <div class="col-lg-9 p-0 h-100vh d-flex justify-content-center auth-bg-rwd auth-bg order-lg-2"></div>
            <div class="col-lg-3 pr-0 order-lg-1">
                <div class="auth-page">
                    <div class="px-4 h-100">
                        <div class="text-center">
                            <div class="tag-icon"></div>
                            <h1 class="h4 text-gray-900 logo-text">高雄市政府農業局</h1>
                            <p class="op-4 logo-e">Agriculture Bureau of Kaohsiung City Government</p>
                            <h3 class="title-text">作物病蟲害預警系統<br>暨植物醫師診斷系統管理平台</h3>
                        </div>
                        <div class="box-choose">
                            <div class="choose-web bg-01">
                                <a href="~/Home/Index">
                                    <div class="web-title">
                                        <h4>作物病蟲害預警系統</h4>
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                    <ul>
                                        <li>疫病蟲害監測數據</li>
                                        <li>前台系統管理</li>
                                        <li>帳號管理</li>
                                    </ul>
                                </a>
                            </div>
                            @{
                                var rp = new List<ICCModule.Entity.Tables.Platform.Permission>();
                                if (Session["LoginRole"] != null)
                                {
                                    rp = Newtonsoft.Json.JsonConvert.DeserializeObject<List<ICCModule.Entity.Tables.Platform.Permission>>(Session["LoginRole"].ToString());
                                }
                                if (rp.Any(x => x.Code.StartsWith("B_Plant_Doctor")))
                                {
                                    <div class="choose-web bg-02">
                                        <a href="~/Home/Index">
                                            <div class="web-title">
                                                <h4>植物醫師診斷系統</h4>
                                                <i class="fas fa-arrow-right"></i>
                                            </div>
                                            <ul>
                                                <li>今日掛號</li>
                                                <li>植醫診斷</li>
                                            </ul>
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                        <div class="login-footer">
                            Copyright©2021 作物病蟲害預警系統暨植物醫師診斷系統管理平台  版權所有
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>